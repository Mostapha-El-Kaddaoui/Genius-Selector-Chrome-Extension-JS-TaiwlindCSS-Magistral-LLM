{
  "author": "Dev. LR",
  "name": "Genius Selector",
  "description": "Select, and do the Magic!",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"               
  ]
}
